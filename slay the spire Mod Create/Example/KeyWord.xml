	break;
</Value>
    </Conversion>
    <Conversion>
      <Key>Event_Addoptions</Key>
      <Value>this.imageEventText.setDialogOption(OPTIONS[{0}]);
</Value>
    </Conversion>
	
    <Conversion>
      <Key>CustomTag</Key>
      <Value>@SpireEnum
    public static AbstractCard.CardTags *{Tag}*;
</Value>
    </Conversion>
	
    <Conversion>
      <Key>Power_turnEnd</Key>
