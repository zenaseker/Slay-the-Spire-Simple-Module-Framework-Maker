  <TextConversions>
    <Conversion>
      <Key>ModBase_TheCharacterAdd</Key>
      <Value>BaseMod.addCharacter(new *{CharacterID}*("*{CharacterID}*"),"img/char/*{Img6}*" ,"img/char/*{Img5}*", ThemodClassEnum.*{ModID}*_CLASS);
</Value>
    </Conversion>
	
    <Conversion>
      <Key>ModBase_CardAdd</Key>
      <Value>this.cardsToAdd.add(new *{CardID}*());
</Value>
    </Conversion>
	
    <Conversion>
      <Key>ModBase_RelicAdd</Key>
      <Value>BaseMod.addRelicToCustomPool(new *{RelicsID}*(),AbstractCardEnum.*{ModID}*_COLOR);
</Value>
    </Conversion>
	
    <Conversion>
      <Key>ModBase_ThePotionAdd</Key>
      <Value>BaseMod.addPotion(*{PotionID}*.class, null, null, null, "*{PotionID}*", ThemodClassEnum.*{ModID}*_CLASS);</Value>
    </Conversion>
	
    <Conversion>
      <Key>ModBase_EventAdd</Key>
      <Value>BaseMod.addEvent((new AddEventParams.Builder("*{EventID}*", *{EventID}*.class))
                .dungeonID("*{EventID}*")
                .playerClass(ThemodClassEnum.*{ModID}*_CLASS)
                .eventType(EventUtils.EventType.ONE_TIME)
                .create());</Value>
	</Conversion>
	
    <Conversion>
      <Key>Character_StartCardAdd</Key>
      <Value>retVal.add("*{StartCardID}*");
</Value>
    </Conversion>
    <Conversion>
      <Key>Character_StartRelicsAdd</Key>
      <Value>retVal.add("*{StartRelics}*");
        UnlockTracker.markRelicAsSeen("*{StartRelics}*");
</Value>
    </Conversion>
    <Conversion>
      <Key>Character_EnergyImgs</Key>
      <Value> </Value>
    </Conversion>
	
    <Conversion>
      <Key>Card_TagsAdd</Key>
      <Value>this.tags.add(*{Tag}*);
</Value>
    </Conversion>
    <Conversion>
      <Key>Card_UpgradeDes</Key>
      <Value>this.rawDescription = cardStrings.UPGRADE_DESCRIPTION;
initializeDescription();
</Value>
    </Conversion>
	
    <Conversion>
      <Key>Event_voids</Key>
