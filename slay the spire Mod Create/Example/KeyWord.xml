	*(
	screenNum = {0};
	button1 = {1};
	button2 = {2};
	button3 = {3};
	{4}
	{5}
	{6}
	//代码写在这
)*
</Value>
    </Conversion>
    <Conversion>
      <Key>Event_options</Key>
      <Value>   case {0}:
